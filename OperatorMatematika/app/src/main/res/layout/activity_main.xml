<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.operatormatematika.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Angka Pertama"
        android:id="@+id/txtawal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editawal"
        android:layout_below="@id/txtawal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Angka Kedua"
        android:id="@+id/textView"
        android:layout_below="@+id/editawal"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editkedua"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Operator"
        android:id="@+id/txtoperator"
        android:layout_below="@+id/editkedua"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnjumlah"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txthasil"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/btnkurang"
        android:text="+" />

    <Button
        android:id="@+id/btnkurang"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="-82dp"
        android:layout_toStartOf="@+id/btnkali"
        android:text="-" />

    <Button
        android:id="@+id/btnkali"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="-75dp"
        android:layout_toStartOf="@+id/btnbagi"
        android:text="x" />

    <Button
        android:id="@+id/btnbagi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtoperator"
        android:layout_marginEnd="-156dp"
        android:layout_marginBottom="-63dp"
        android:layout_toStartOf="@+id/txtoperator"
        android:text=":" />

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnkurang"
        android:layout_marginTop="82dp"
        android:text="Hasil" />

    <EditText
        android:id="@+id/edithasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txthasil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp" />

</RelativeLayout>
